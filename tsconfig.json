{
  "compilerOptions": {
    "target": "ES2021",                  
    "module": "commonjs", 
    "outDir": "./dist",
    "rootDir": "./src",              
    "experimentalDecorators": true,     
    "emitDecoratorMetadata": true,      
    "strict": false,                   
    "strictPropertyInitialization": false, 
    "esModuleInterop": true,            
    "skipLibCheck": true                
  },
  "include": ["src/**/*"],              
  "exclude": ["node_modules","dist"]           
}